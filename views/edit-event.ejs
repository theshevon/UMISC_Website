<% include ./partials/header %>

<link rel="stylesheet" href="/stylesheets/new-event.css">

<div id="content" class="container main">

  <h2 class="d-flex mb-5 justify-content-center">Edit Details For: <%= event.name %></h2>

  <form action="/events/<%=event._id%>?_method=PUT" method="POST">

      <div class="form-group row">
        <label for="name" class="col-sm-6 mx-0 pr-5">Name<span>*</span>:</label>
        <div class="col-sm-6">
          <input id="name" type="text" class="form-control" name="event[name]" value="<%= event.name %>"required>
        </div>
      </div>

      <div class="form-group row">
        <label for="name" class="col-sm-6 mx-0 pr-5">Date<span>*</span>:</label>
        <div class="col-sm-6">
          <input id="name" type="date" class="form-control" name="event[date]" value="<%= event.date %>"required>
        </div>
      </div>

      <div class="form-group row">
        <label for="name" class="col-sm-6 mx-0 pr-5">Image URL<span>*</span>:</label>
        <div class="col-sm-6">
          <input id="name" type="text" class="form-control" name="event[image]" value="<%= event.image %>"required>
        </div>
      </div>

      <div class="form-group row">
        <label for="message" class="col-12 col-sm-6">Description<span>*</span>:</label>
        <div class="col-sm-6">
          <textarea id="message" class="form-control" rows="10" name="event[description]" value="<%= event.description %>"required></textarea>
        </div>
      </div>

      <div class="form-group row">
        <label for="name" class="col-sm-6 mx-0 pr-5">Location<span>*</span>:</label>
        <div class="col-sm-6">
          <input id="name" type="text" class="form-control" name="event[location]" value="<%= event.location %>" required>
        </div>
      </div>

      <div class="form-group row">
        <label for="name" class="col-sm-6 mx-0 pr-5">Event Page Link<span>*</span>:</label>
        <div class="col-sm-6">
          <input id="name" type="text" class="form-control" name="event[link]" value="<%= event.link %>"required>
        </div>
      </div>

      <div class="float-right mt-3">
        <button type="submit" class="btn">Confirm Changes</button>
      </div>

    </form>

</div>

<% include ./partials/footer %>
