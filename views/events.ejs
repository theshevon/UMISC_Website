    <span id="month"></span>
    <i class="fas fa-angle-right"></i>
    <!-- <br>
    <span id="year"></span> -->
  </h1>

  <div class="row">
    <% events.forEach(function(event){ %>
      <div class="event col-md-4 col-sm-6 pb-5">
          <h3><%=event.name%></h3>
          <p><%=event.date.toDateString()%></p>
          <img src="<%= event.image %>" class="img-thumbnail">
          <button class="test-btn mt-3">More Info</button>
      </div>
    <% }) %>
  </div>

