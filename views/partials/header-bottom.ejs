  </head>

  <body>

    <!-- main navbar -->
    <nav id="mainNavBar" class="navbar fixed-top navbar-dark navbar-expand-md">
      <div class="container">
        <a class="navbar-brand" href="/home"><img src="/images/icon.png" width="30" height="30"></a>
        <button id="toggler" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navLinks" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navLinks" class="collapse navbar-collapse">
          <ul class="navbar-nav d-flex justify-content-between">
            <li id="about-container" class="nav-item">
              <a id="about-link" href="/about" class="nav-link">About</a>
            </li>
            <li id="events-container" class="nav-item">
              <a id="events-link" href="/events" class="nav-link">Events</a>
            </li>
            <li id="blog-container" class="nav-item">
                <a id="blog-link" href="/blog" class="nav-link">Blog</a>
              </li>

            <!-- if a user/admin is logged in, replace Contact link with Logout link -->
            <li class="nav-item">
              <% if(currentUser){ %>
                <a href="/logout" class="nav-link">Log Out</a>
              <% } else { %>
                <a id="contact-link" href="/contact" class="nav-link">Contact</a>
              <% } %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- flash message containers -->
    <div id="flash" class="container">
        <% if (error && error.length > 0){ %>
          <div class="alert alert-danger" role="alert"><%=error%></div>
        <% } %>
        <% if (success && success.length > 0){ %>
          <div class="alert alert-success" role="success"><%=success%></div>
        <% } %>
    </div>
  
