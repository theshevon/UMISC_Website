<% include ./partials/header %>
<link rel="stylesheet" href="/stylesheets/show-event.css">

<div id="content" class="container">
  <h2><%=event.name%></h2>
  <img class="img-fluid d-flex mx-auto mb-4" src="<%= event.image %>">
  <% var date = event.date.toDateString() %>
  <p><strong>Date:</strong> <%= date.substring(0,3)%>, <%= date.substring(8,10)%> <%= date.substring(4,7)%> <%= date.substring(11)%></p>
  <p><strong>Description:</strong><br><%=event.description%></p>
  <p><strong>Location:</strong><a href="<%=event.location_link%>" target="_blank"> <%=event.location%></a></p>
  <p><strong>Event Page:</strong> <a href="<%=event.page_link%>" target="_blank"><%=event.name%></a></p>
</div>

<% include ./partials/footer %>
