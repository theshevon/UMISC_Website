<% include ./partials/header %>

<!-- Custom CSS -->
<link rel="stylesheet" href="/stylesheets/home.css">
<link rel="stylesheet" href="/stylesheets/contact.css">

<div id="content" class="container">

    <h3>Please fill in your details and message below and we will get back to you as soon as possible</h3>

    <hr>

    <section class="message-form">

      <form>

        <!-- SANITISE INPUTS -->
        <div class="form-group row">
          <label for="name" class="col-12 col-sm-6 col-md-2">Name<span>*</span>:</label>
          <div class="col-12 col-sm-6 col-md-4">
            <input type="text" class="form-control" id="name" placeholder="Eliot Alderson" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="emailAddress" class="col-12 col-sm-6 col-md-2">Email Address<span>*</span>:</label>
          <div class="col-12 col-sm-6 col-md-4">
            <input type="email" class="form-control" id="emailAddress" placeholder="eanderson@gmail.com" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="org" class="col-12 col-sm-6 col-md-2">Organisation:</label>
          <div class="col-12 col-sm-6 col-md-4">
            <input type="email" class="form-control" id="org" placeholder="White Lotus" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="message" class="col-12 col-sm-6 col-md-2">Message<span>*</span>:</label>
          <div class="col-12 col-sm-6 col-md-10">
            <textarea id="message" class="form-control" rows="5" required></textarea>
          </div>
        </div>

      </form>

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn">Submit</button>
      </div>

    </section>

    <section class="alt-contact">

      <div class="d-flex pb-0">
        <h6>You could also reach us via:</h6>
        <ul>
          <li><a href="https://www.facebook.com/uomisc/?ref=br_rs" target="_blank">Facebook</a></li>
          <li><a href="https://www.linkedin.com/company/melbourne-information-security-club/" target="_blank">LinkedIn</a></li>
        </ul>
      </div>

    </section>

</div>

<!-- Custom JS -->
<script type="text/javascript" src="/scripts/contact.js"></script>

