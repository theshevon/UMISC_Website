<% include ./partials/header %>

<!-- Custom CSS -->
<link rel="stylesheet" href="/stylesheets/contact.css">

<div id="content" class="container">

    <h3>Please fill in your details and message below and we will get back to you as soon as possible</h3>

    <hr>

    <section class="message-form">

      <form action="/contact" method="POST">

        <!-- SANITISE INPUTS -->
        <div class="form-group row">
          <label for="name" class="col-12 col-sm-6 col-md-2 mx-0 pr-5">Name<span>*</span>:</label>
          <div class="col-12 col-sm-6 col-md-4">
            <input id="name" type="text" class="form-control" name="message[name]" required>
          </div>
          <label for="emailAddress" class="col-12 col-sm-6 col-md-2">Email Address<span>*</span>:</label>
          <div class="col-12 col-sm-6 col-md-4">
            <input id="emailAddress" type="email" class="form-control" name="message[email]" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="subject" class="col-12 col-sm-6 col-md-2 p-auto">Subject<span>*</span>:</label>
          <div class="col-12 col-sm-6 col-md-4">
            <input id="subject" type="text" class="form-control" name="message[subject]" required>
          </div>
          <label for="org" class="col-12 col-sm-6 col-md-2">Organisation:</label>
          <div class="col-12 col-sm-6 col-md-4">
            <input id="org" type="text" class="form-control" name="message[org]">
          </div>
        </div>

        <div class="form-group row">
          <label for="message" class="col-12 col-sm-6 col-md-2">Message<span>*</span>:</label>
          <div class="col-12 col-sm-6 col-md-10">
            <textarea id="message" class="form-control" rows="5" name="message[body]" required></textarea>
          </div>
        </div>

        <div class="d-flex justify-content-end">
          <button type="submit" class="btn">Submit</button>
        </div>

      </form>

    </section>

    <section class="alt-contact">

      <div class="d-flex pb-0">
        <h6>You could also reach us via:</h6>
        <ul>
          <li><a href="https://www.facebook.com/uomisc/?ref=br_rs" target="_blank">Facebook</a></li>
          <li><a href="https://www.linkedin.com/company/melbourne-information-security-club/" target="_blank">LinkedIn</a></li>
        </ul>
      </div>

    </section>

</div>

<% include ./partials/footer %>
